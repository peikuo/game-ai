[MASTER]
# Specify the Python interpreter path from your conda environment
init-hook='import sys; sys.path.append("/Users/peik/Workspace/windcode/civ6-ai"); sys.path.append("/Users/peik/anaconda3/envs/aigame/lib/python3.11/site-packages")'

[MESSAGES CONTROL]
# Disable ALL warnings, conventions, refactoring suggestions - show only fatal errors
disable=all

# Only enable fatal errors (F) that would cause the code to crash
enable=F

[FORMAT]
# Maximum line length (ignored due to the above settings but kept for reference)
max-line-length=100

[REPORTS]
# Set the output format to be more concise
output-format=text
# Only show error messages (no reports on stats, refactorings, etc)
reports=no
# Minimum displayed message priority (-1 is LOW, 0 is INFO, 1 is WARNING, 2 is ERROR)
msg-template={path}:{line}: [{msg_id}({symbol}), {obj}] {msg}

[TYPECHECK]
# Ignore cv2 module for type checking
ignored-modules=cv2
